{
  "info": {
    "name": "HR34 REST API Collection",
    "description": "Complete REST API collection for HR34 microservices",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost/hr34/api_gateway",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "hr34-api-key-2024",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "test_username",
      "value": "testuser",
      "type": "string"
    },
    {
      "key": "test_password",
      "value": "testpass123",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{test_username}}\",\n  \"password\": \"{{test_password}}\"\n}"
            },
            "url": "{{base_url}}/api/v1/auth/login"
          }
        },
        {
          "name": "Verify 2FA",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": 1,\n  \"code\": \"123456\"\n}"
            },
            "url": "{{base_url}}/api/v1/auth/verify-2fa"
          }
        },
        {
          "name": "Check Session",
          "request": {
            "method": "GET",
            "header": [{"key": "X-API-Key", "value": "{{api_key}}"}],
            "url": "{{base_url}}/api/v1/auth/check-session"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [{"key": "X-API-Key", "value": "{{api_key}}"}],
            "url": "{{base_url}}/api/v1/auth/logout"
          }
        }
      ]
    },
